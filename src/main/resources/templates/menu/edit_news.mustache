{{>layouts/after_menuheader}}
<div class="main">
    <div class="container shadow p-3 mb-5 bg-body-tertiary rounded">
        <div class="explain">
            <div class="explain_title">
                <h1>
                    News : 뉴스
                </h1>
            </div>
            {{#menuCategory}}
            <div class="section">
                <form id="editNews" enctype="multipart/form-data">
                    <div class="content_title">
                        <input type="text" class="input_title form-control" name="title" value="{{menuCategory.title}}" maxlength="100">
                    </div>

                    {{#hasAttachedFiles}}
                        <div class="fileInfo">
                            {{#images}}
                                <div class="image mb-3" style="text-align: center">
                                    <img src="/news/{{.}}" alt="이미지 첨부파일" class="img-fluid rounded border border-light p-2" style="max-width: 60%">
                                </div>
                            {{/images}}

                            <!--비디오-->
                            {{#videos}}
                                <div class="video mb-3" style="text-align: center">
                                    <video controls class="img-fluid rounded border border-light p-2" style="max-width: 60%">
                                        <source src="/news/{{.}}" type="video/mp4">
                                        <!--브라우저가 지원하지 않을 경우-->
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            {{/videos}}

                            <!--문서-->
                            {{#documents}}
                                <div class="document mb-3" style="text-align: center">
                                    <a href="/news/{{.}}" class="btn btn-primary" role="button" style="min-width: 120px">문서 다운로드</a>
                                </div>
                            {{/documents}}

                            <!--파일 타입을 알 수 없을 경우(설정하지 않은 파일일 경우)-->
                            {{#unknowns}}
                                <div class="unknown mb-3">
                                    <span class="text-danger fw-bold">알 수 없는 파일</span>
                                </div>
                            {{/unknowns}}
                        </div>
                    {{/hasAttachedFiles}}


                    <div class="content_content" >
                                <textarea class="input_content form-control" name="contents" cols="30" rows="10"
                                          title="content" maxlength="max">{{menuCategory.contents}}</textarea>
                    </div>

                    <div class="btn-set">
                        <div class="btn-file">
                            <div class="mb-3">
                                <input class="form-control" type="file" name="files" multiple>
                            </div>
                        </div>

                        <div class="btn-edit">
                            <a class="edit text-decoration-none">
                                <button type="submit" class="btn btn-outline-secondary">수정</button>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
            {{/menuCategory}}
        </div>
    </div>
</div>


{{>layouts/homefooter}}