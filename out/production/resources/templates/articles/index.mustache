{{>layouts/header}}
<table class="container table table-dark table-striped">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">TITLE</th>
        <th scope="col">CONTENT</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/articles/{{id}}" class="text-decoration-none text-white">{{title}}</a></td>
            <td>{{content}}</td>
            <td>
                <button class="btn btn-danger">
                    <a href="/articles/{{id}}/delete" class="text-decoration-none text-white">삭제</a>
                </button>
            </td>
        </tr>
    {{/articleList}}
    </tbody>
</table>
<div class="container">
    <button class="btn btn-outline-secondary">
        <a href="/articles/new" class="text-white text-decoration-none">새 글 작성하기</a>
    </button>
</div>
{{>layouts/footer}}