{{>layouts/after_menuheader}}
<div class="main">
    <div class="container shadow p-3 mb-5 bg-body-tertiary rounded">
    {{#menuCategory}}
        <div class="news_explain">
            <div class="explain_title">
                <h1>
                    News : 뉴스
                </h1>
            </div>

            <div class="article-header">
                <div class="article-title">
                    <div class="title_area mt-2 mb-3">
                        {{menuCategory.title}}
                    </div>
                </div>
            </div>

            <div class="article-main">
                {{#hasAttachedFiles}}
                <div class="fileInfo">
                    {{#images}}
                        <div class="image mb-3" style="text-align: center">
                            <img src="/news/{{.}}" alt="이미지 첨부파일" class="img-fluid rounded border border-light p-2" style="max-width: 60%">
                        </div>
                    {{/images}}

                    <!--비디오-->
                    {{#videos}}
                        <div class="video mb-3" style="text-align: center">
                            <video controls class="img-fluid rounded border border-light p-2" style="max-width: 60%">
                                <source src="/news/{{.}}" type="video/mp4">
                                <!--브라우저가 지원하지 않을 경우-->
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    {{/videos}}

                    <!--문서-->
                    {{#documents}}
                        <div class="document mb-3" style="text-align: center">
                            <a href="/news/{{.}}" class="btn btn-primary" role="button" style="min-width: 120px">문서 다운로드</a>
                        </div>
                    {{/documents}}

                    <!--파일 타입을 알 수 없을 경우(설정하지 않은 파일일 경우)-->
                    {{#unknowns}}
                        <div class="unknown mb-3">
                            <span class="text-danger fw-bold">알 수 없는 파일</span>
                        </div>
                    {{/unknowns}}
                </div>
                {{/hasAttachedFiles}}
                <pre class="main-content" style="white-space: pre-wrap; word-wrap: break-word;">
                    {{menuCategory.contents}}
                </pre>
                {{#isAdmin}}
                <div class="edit-btn">
                    <a href="/manager/news" class="text-decoration-none text-black">
                        <button type="button" class="btn btn-outline-warning">수정</button>
                    </a>
                </div>
                {{/isAdmin}}
            </div>
        </div>
    </div>
    {{/menuCategory}}
</div>
{{>layouts/after_menufooter}}